{
  "name": "root",
  "private": true,
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.29.0",
    "globals": "^16.0.0",
    "lerna": "^8.2.2",
    "lint-staged": "^16.1.1",
    "madge": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript-eslint": "^8.34.0"
  },
  "dependencies": {
    "husky": "^9.1.7"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "concurrently --kill-others-on-fail --kill-timeout 30000 --prefix \"[{name}]\" --names \"backend,frontend,mcp-server,shared\" --prefix-colors \"blue,green,yellow,purple\" \"cd packages/backend && npm run dev\" \"cd packages/frontend && npm run dev\" \"cd packages/mcp-server && npm run dev\" \"cd packages/shared && npm run dev\"",
    "dev:lerna": "pnpm lerna run dev --stream",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "dev:mcp": "cd packages/mcp-server && npm run dev",
    "dev:shared": "cd packages/shared && npm run dev",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  }
}
